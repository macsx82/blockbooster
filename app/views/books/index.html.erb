<h1>Listing books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Plot</th>
    <th>Language</th>
    <th>Isbn</th>
    <th>Editor</th>
    <th>Year</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author_id %></td>
    <td><%= book.plot %></td>
    <td><%= book.language %></td>
    <td><%= book.isbn %></td>
    <td><%= book.editor_id %></td>
    <td><%= book.year %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

